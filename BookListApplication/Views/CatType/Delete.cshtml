@model BookListApplication.Models.CatType

<form method="post" asp-action="Delete">
    @*we need to pass Id to controller when submit*@
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-primary pl-3">Edit Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CatTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CatTypeName" class="form-control" />
                        <span asp-validation-for="CatTypeName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-primary w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp;  Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}

