@model BookListApplication.Models.CatType

<form method="post" asp-action="CreateNew">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-primary pl-3">Add Category Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CatTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CatTypeName" class="form-control" />
                        <span asp-validation-for="CatTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-controller="CatType" asp-action="Index" class="btn btn-primary w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{ 
    @{  <partial name="_ValidationScriptsPartial" /> }
}

