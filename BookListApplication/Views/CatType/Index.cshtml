@model IEnumerable<BookListApplication.Models.CatType>

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-info">Category Type</h2>
        </div>
        <div class="col text-right">
            <a asp-controller="CatType" asp-action="CreateNew" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New
            </a>
        </div>
    </div>

    <br /> <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>CategoryType Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.CatTypeName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="CatType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-3">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="CatType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-3">
                                    <i class="fas fa-trash-alt"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Type.</p>
    }
</div>

